<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp" >

    <Button
        android:id="@+id/simple_dialog"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_dialog_example" />

    <Button
        android:id="@+id/selection_dialog"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selection_dialog_example" />

    <Button
        android:id="@+id/feature_tutorial"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feature_tutorial_example"/>

    <Button
        android:id="@+id/rate_it"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate_it_example" />

    <Button
        android:id="@+id/iap_flow"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iap_flow_example" />

    <Button
        android:id="@+id/bottom_sheet"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_example" />

</LinearLayout>
